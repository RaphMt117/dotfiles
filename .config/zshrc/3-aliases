# -----------------------------------------------------
# Yay
# -----------------------------------------------------
alias y="yay"
alias yupgrade="yay -Syu" # Sync with repositories before upgrading packages
alias yclear="yay -Scc" # Remove unused packages and cache
alias yconfig="yay -Pg" # Display current configuration
alias yremove="yay -R" # Remove packages, keeping its settings and dependencies
alias yforceremove="yay -Rns" # Remove packages, including its settings and unneeded dependencies
alias yorphan="yay -Qtd" # Remove orphans using yay
alias ylocal="yay -Qs" # Search for packages in the local database
alias ylist="yay -Qe" # List installed packages including from AUR (tagged as "local")
alias yinstall="yay -U" # Install a package from a local file
alias yupdateall="yay -Syu" # Update all packages, same as 'yay'
alias yupdateaur="yay -Syu --aur" # Update only AUR packages

# -----------------------------------------------------
# Util
# -----------------------------------------------------
alias color='hyprpicker'
alias dlmp3='yt-dlp -x --audio-format mp3'
alias calc='kalker'
alias mn='hledger' # finances
