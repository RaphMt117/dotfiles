# -----------------------------------------------------
# Zsh
# -----------------------------------------------------
alias reload="clear && source ~/.zshrc"
alias mkdir="mkdir -p"
alias :q="exit"
alias c="clear"
alias ff="fastfetch"
alias copy="clipcopy"

# -----------------------------------------------------
# Config
# -----------------------------------------------------
alias dotconfig="cd ~/dotfiles/.config/ && nvim ."
alias config="cd ~/.config/ && nvim"
alias omzconfig="nvim ~/.oh-my-zsh"
alias zshconfig="cd ~/dotfiles/.config/zshrc/ && nvim"
alias tmuxconfig="cd ~/.config/tmux/ && nvim"
alias nvimconfig="cd ~/.config/nvim/ && nvim"

# -----------------------------------------------------
# Editor
# -----------------------------------------------------
alias code='windsurf'
alias v='nvim'
alias vim='nvim'
alias vi='nvim'
alias n='cd ~/notes/ && nvim .'

# -----------------------------------------------------
# System
# -----------------------------------------------------
alias ts='~/.config/ml4w/scripts/snapshot.sh'
alias cleanup='~/.config/ml4w/scripts/cleanup.sh'
alias wifi='nmtui'
alias shutdown='systemctl poweroff'

